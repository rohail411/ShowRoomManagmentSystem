<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rohailbutt411gmail.showroommanagmentsystem">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera "
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".SignUp" />
        <activity
            android:name=".About"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Expenses"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Purchase"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Sell"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ProductDetailView"
            android:parentActivityName=".Sell" />
        <activity
            android:name=".Report"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ResetPassword"
            android:parentActivityName=".Login" />
        <activity android:name=".DocumentStatus" android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>