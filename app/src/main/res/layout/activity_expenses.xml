<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Expenses"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background"
    android:id="@+id/content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expense Type"
        android:textSize="18sp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expense_spinner"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="0.00"
        android:id="@+id/expense_amount"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint=""
        android:id="@+id/expense_detail"
        android:inputType="text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:hint="1/01/2019"
        android:editable="false"
        android:id="@+id/date"
        android:onClick="date_picker"
        android:focusable="false"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add Expense"
            android:id="@+id/expense_btn"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="90dp"
            android:background="@drawable/button_rounded"
            android:onClick="btn_expenses_add"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expense_progress"
        android:layout_marginTop="-40dp"
        android:layout_marginHorizontal="140dp"/>



</LinearLayout>