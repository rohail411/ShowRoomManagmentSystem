<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background"
    android:id="@+id/main_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="10dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iconpurchase"
            android:padding="18dp"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginRight="10dp"
            android:onClick="btn_purchase"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iconsell"
            android:layout_weight="1"
            android:padding="21dp"
            android:background="#fff"
            android:onClick="btn_sell"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iconexpense"
            android:padding="21dp"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginRight="10dp"
            android:onClick="btn_expenses"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iconreport"
            android:layout_weight="1"
            android:id="@+id/report_main"
            android:padding="13dp"
            android:onClick="report_btn"
            android:background="#fff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/adduser"
            android:layout_marginRight="10dp"
            android:onClick="add_user_btn"
            android:background="#fff"
            android:id="@+id/add_user_main"
            android:padding="21dp"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>